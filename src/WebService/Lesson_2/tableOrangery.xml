<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <xsl:template match="/">
        <html>
            <head>
                <title>Plants in the Orangery</title>
            </head>
            <body>
                <h1>Plants in the Orangery</h1>
                <xsl:apply-templates select="//Plant">
                    <xsl:sort select="GrowingTips/Temperature" data-type="number"/>
                </xsl:apply-templates>
            </body>
        </html>
    </xsl:template>

    <xsl:template match="Plant">
        <div>
            <h2><xsl:value-of select="Name"/></h2>
            <p><strong>Soil:</strong> <xsl:value-of select="Soil"/></p>
            <p><strong>Origin:</strong> <xsl:value-of select="Origin"/></p>
            <p><strong>Temperature:</strong> <xsl:value-of select="GrowingTips/Temperature"/>Â°SomeTask.C</p>
            <p><strong>Light:</strong> <xsl:value-of select="GrowingTips/Light"/></p>
            <p><strong>Watering:</strong> <xsl:value-of select="GrowingTips/Watering"/></p>
            <p><strong>Multiplying:</strong> <xsl:value-of select="Multiplying"/></p>
        </div>
    </xsl:template>

</xsl:stylesheet>
